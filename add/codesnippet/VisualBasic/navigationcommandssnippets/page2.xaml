<Page 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:SDKSample" 
  WindowTitle="Page2">

  <Page.Resources>
    <local:DateTime x:Key="dateTime" />
  </Page.Resources>

  <TextBlock>
    <TextBlock FontWeight="Bold" FontSize="15">Page 2</TextBlock>
    <LineBreak />
    <TextBlock HorizontalAlignment="Right" Text="{Binding Source={StaticResource dateTime},Path=Now}" />
    <LineBreak />
    <Hyperlink NavigateUri="Page3.xaml">Navigate to Page3</Hyperlink>
  </TextBlock>

</Page>
