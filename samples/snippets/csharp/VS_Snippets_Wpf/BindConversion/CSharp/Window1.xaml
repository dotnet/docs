<Window
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="SDKSample.Window1"
  Width="400"
  Height="200"
  Background="White"
  Title="BindConversion">

  <DockPanel Background="White" Loaded="OnPageLoaded">
    <TextBlock Foreground="Black" DockPanel.Dock="Top"
      FontSize="14">Select a Culture in the ListBox to display today's date.</TextBlock>
    <TextBlock Foreground="White" DockPanel.Dock="Top"> </TextBlock>
    <ListBox Name="lbChooseCulture" SelectionChanged="OnSelectionChanged"
      Width="160" DockPanel.Dock="Top"
      FontSize="16" FontWeight="Bold">
      <ListBoxItem>English (en-US)</ListBoxItem>
      <ListBoxItem>Spanish (es-ES)</ListBoxItem>
      <ListBoxItem>German (de-DE)</ListBoxItem>
      <ListBoxItem>French (fr-FR)</ListBoxItem>
    </ListBox>
    <TextBlock Foreground="White" DockPanel.Dock="Top"> </TextBlock>
    <TextBlock Name="myDateText" DockPanel.Dock="Top"
      Foreground="Blue" FontSize="14">Converted Date Appears Here</TextBlock>
  </DockPanel>

</Window>
