<Window x:Class="DigitalInkTopics.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DigitalInkTopics" Height="300" Width="300"
    >
  <DockPanel Margin="10">
    <!--<Snippet3>-->
    <InkCanvas Name="myInkCanvas" MouseRightButtonUp="RightMouseUpHandler">
    <!--</Snippet3>-->
    </InkCanvas>
    <!--<Snippet5>-->
    <InkCanvas>
      <TextBlock>Show text here.</TextBlock>
    </InkCanvas>
    <!--</Snippet5>-->
    <!--<Snippet6>-->
    <Grid>
      <InkCanvas/>
    </Grid>
    <!--</Snippet6>-->
    <!--TODO: The following is for sample purposes only. If you try to run window2, 
    you need to either put a picture in the folder, or comment out the <Image> tag below.-->
    <!--<Snippet7>-->
    <InkCanvas>
      <Image Source="myPicture.jpg"/>
    </InkCanvas>
    <!--</Snippet7>-->
  </DockPanel>
</Window>
