    <Style TargetType="{x:Type Button}">
      <EventSetter Event="Click" Handler="b1SetColor"/>
    </Style>
  </StackPanel.Resources>
  <!--<SnippetSimplestSyntax2>-->
  <Button>Click me</Button>
  <!--</SnippetSimplestSyntax2>-->
