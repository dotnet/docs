<Page 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MiniLanguageExample">
    <StackPanel>

      <!-- <SnippetGraphicsMMStreamGeometryAttributeSyntaxInline> -->
      <Path Stroke="Black" Fill="Gray"
            Data="M 10,100 C 10,300 300,-200 300,100" />
      <!-- </SnippetGraphicsMMStreamGeometryAttributeSyntaxInline> -->

      <!-- <SnippetGraphicsMMPathFigureCollectionAttributeSyntaxInline> -->
      <Path Stroke="Black" Fill="Gray">
        <Path.Data>
          <PathGeometry Figures="M 10,100 C 10,300 300,-200 300,100" />
        </Path.Data>
      </Path>
      <!-- </SnippetGraphicsMMPathFigureCollectionAttributeSyntaxInline> -->
      
        <!-- <SnippetGraphicsMMPathFigureCollectionAttributeSpacingInline> -->
      <Path Stroke="Black" Fill="Gray">
        <Path.Data>
          <PathGeometry Figures="M10.0.100C10,300 300,-200 300,100" />
        </Path.Data>
      </Path>
      <!-- </SnippetGraphicsMMPathFigureCollectionAttributeSpacingInline> -->
      
    </StackPanel>
</Page>
