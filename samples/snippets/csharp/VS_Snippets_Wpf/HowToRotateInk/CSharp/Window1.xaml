   <Canvas>
      <InkCanvas Name="inkCanvas1" Background="LightBlue"
                 Height="200" Width="200" 
                 Canvas.Top="20" Canvas.Left="20" />
        
      <Border Name="canvas1" Background="LightGreen"  
