              Canvas.Top="20" Canvas.Left="240" >
        <InkPresenter Name="inkPresenter1"/>
      </Border>
      <Button Click="button_Click" 
              Canvas.Top="240" Canvas.Left="170">
        Copy and Rotate Strokes
      </Button>
    </Canvas>
  <!--</Snippet1>-->
</Window>
