<Window x:Class="KeyArgsSnippetSample.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="KeyArgsSnippetSample"
    Background="LightBlue"
    KeyDown="KeyHandler"
    KeyUp="KeyHandler"
    >
    <StackPanel>
      <TextBox Height="200" Width="300" Background="WhiteSmoke"></TextBox>
      <Button Name="btnKeyStates">btnKeyStates</Button>
      <Button Name="btnDown">btnDown</Button>
      <Button Name="btnNone">btnNone</Button>
      <Button Name="btnToggled">btnToggled</Button>
      <Button Name="btnIsRepeat">btnIsRepeat</Button>
      <Button Name="btnIsDown">btnIsDown</Button>
      <Button Name="btnIsUp">btnIsUp</Button>
      <Button Name="btnIsToggle">btnIsToggle</Button>
      <Button Name="btnIsToggledAndDown">bntIsToggledAndDown</Button>
      <Button Name="btnIsToggledAndUp">btnIsToggledAndUp</Button>
      <Button Name="btnIsNotToggledAndDown">btnIsNotToggledAndDown</Button>
      <Button Name="btnIsNotToggledAndUp">btnIsNotToggledAndUp</Button>
      <Button Name="btnValue"></Button>
      <Button Name="btnKeyModifers">Modifers</Button>
      <Button Name="button1">button1</Button>
    </StackPanel>
</Window>
