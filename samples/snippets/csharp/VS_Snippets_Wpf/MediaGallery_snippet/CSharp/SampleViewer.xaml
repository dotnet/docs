<!-- Displays the different animation examples. -->
<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="SDKSample.SampleViewer"
    Title="Media Gallery">

    
    <DockPanel>
    <TabControl Background="White">
      <TabItem Header="MediaTimeline Sample">  
        <Frame Source="MediaTimelineExample.xaml" />
      </TabItem> 
      <TabItem Header="MediaElement Sample">  
        <Frame Source="MediaElementExample.xaml" />
      </TabItem> 
      <TabItem Header="Stretch MediaElement Sample">  
        <Frame Source="StretchMediaElementExample.xaml" />
      </TabItem>
      <TabItem Header="Media Plus Animations Sample">  
        <Frame Source="MediaTimelinePlusAnimationExample.xaml" />
      </TabItem>
      <TabItem Header="Sound from User Event Sample">  
        <Frame Source="SoundFromUserEventExample.xaml" />
      </TabItem>  
      <TabItem Header="Repeat Sound Sample">  
        <Frame Source="SoundRepeatExample.xaml" />
      </TabItem>
      <TabItem Header="SoundPlayerAction Sample">
        <Frame Source="SoundPlayerActionTriggers.xaml" />
      </TabItem>
    </TabControl>
   
    </DockPanel>
</Window>
