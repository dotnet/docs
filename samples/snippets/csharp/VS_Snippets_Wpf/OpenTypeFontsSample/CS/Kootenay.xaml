<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="UsingOpenTypeFonts.Kootenay"
  Background="Snow"
  >

  <FlowDocumentReader ViewingMode="Scroll">
    <FlowDocument ColumnWidth="800.0">
      <Paragraph>
        <Run FontFamily="/FontLibrary;Component/#Kootenay" FontSize="96">
          Kootenay
        </Run>
      </Paragraph>

      <Paragraph>
        <Run Foreground="DarkSlateBlue">Characters</Run>
        <LineBreak/>
        <!-- <SnippetOpenTypeFontsSample1> -->
        <Run FontFamily="/FontLibrary;Component/#Kootenay" FontSize="36">
          ABCDEFGHIJKLMNOPQRSTUVWXYZ
        </Run>
        <!-- </SnippetOpenTypeFontsSample1> -->
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Kootenay" FontSize="36">
          abcdefghijklmnopqrstuvwxyz
        </Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Kootenay" FontSize="36">
          1234567890 ([{@}]) ?!.:;,* /|\$%+=~_#'"-
        </Run>
      </Paragraph>

      <Paragraph>
        <Run Foreground="DarkSlateBlue">Old Style Numerals</Run>
        <LineBreak/>
        <Run Typography.NumeralStyle="OldStyle" FontFamily="/FontLibrary;Component/#Kootenay" FontSize="36">
          1234567890
        </Run>
        <LineBreak/>
      </Paragraph>

    </FlowDocument>

  </FlowDocumentReader>
</Page>