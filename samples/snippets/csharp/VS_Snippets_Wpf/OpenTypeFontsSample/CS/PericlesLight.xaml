<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="UsingOpenTypeFonts.PericlesLight"
  Background="Snow"
  >

  <FlowDocumentReader ViewingMode="Scroll">
    <FlowDocument ColumnWidth="800.0">
      <Paragraph>
        <Run FontFamily="/FontLibrary;Component/#Pericles Light" FontSize="96">
          Pericles Light
        </Run>
      </Paragraph>

      <Paragraph>
        <Run Foreground="DarkSlateBlue">Characters</Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Pericles Light" FontSize="36">
          ABCDEFGHIJKLMNOPQRSTUVWXYZ
        </Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Pericles Light" FontSize="36">
          abcdefghijklmnopqrstuvwxyz
        </Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Pericles Light" FontSize="36">
          1234567890 ([{@}]) ?!.:;,* /|\$%+=~_#'"-
        </Run>
      </Paragraph>

      <Paragraph FontFamily="/FontLibrary;Component/#Pericles Light" FontSize="36">
        <Run Foreground="DarkSlateBlue" FontSize="16" FontFamily="Verdana Bold">Stylistic Alternates</Run>
        <LineBreak/>
        <Run Typography.StylisticAlternates="1">A</Run>NCI<Run Typography.StylisticAlternates="1">E</Run>NT
        GR<Run Typography.StylisticAlternates="1">EE</Run>K
        MYTH<Run Typography.StylisticAlternates="1">O</Run>L<Run Typography.StylisticAlternates="1">O</Run>GY
      </Paragraph>

    </FlowDocument>
  </FlowDocumentReader>
</Page>