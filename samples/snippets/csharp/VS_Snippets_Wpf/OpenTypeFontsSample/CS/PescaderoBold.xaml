<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="UsingOpenTypeFonts.PescaderoBold"
  Background="Snow"
  >

  <FlowDocumentReader ViewingMode="Scroll">
    <FlowDocument ColumnWidth="800.0">
      <Paragraph>
        <Run FontFamily="/FontLibrary;Component/#Pescadero Bold" FontSize="96">
          Pescadero Bold
        </Run>
      </Paragraph>

      <Paragraph>
        <Run Foreground="DarkSlateBlue">Characters</Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Pescadero Bold" FontSize="36">
          ABCDEFGHIJKLMNOPQRSTUVWXYZ
        </Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Pescadero Bold" FontSize="36">
          abcdefghijklmnopqrstuvwxyz
        </Run>
        <LineBreak/>
        <Run FontFamily="/FontLibrary;Component/#Pescadero Bold" FontSize="36">
          1234567890 ([{@}]) ?!.:;,* /|\$%+=~_#'"-
        </Run>
      </Paragraph>

      <Paragraph>
        <Run Foreground="DarkSlateBlue">Slashed Fractions</Run>
        <LineBreak/>
        <Run Typography.Fraction="Slashed" FontFamily="/FontLibrary;Component/#Pescadero Bold" FontSize="36">
          1/16 1/4 15/32
        </Run>
        <LineBreak/>
      </Paragraph>

    </FlowDocument>
  </FlowDocumentReader>
</Page>