<Application x:Class="SDKSample.MyApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="Window1.xaml">

  <!-- Define the ImageBrush resources to be used for
       the Fill and Stroke properties of the OutlineText control. -->
  <Application.Resources>

    <ImageBrush x:Key="ButterflyBrush"
      Viewport="0,-20,160,160" ViewportUnits="Absolute"
      TileMode="Tile"
      ImageSource="sampleImages\butterfly.jpg">
    </ImageBrush>

    <ImageBrush x:Key="CherriesBrush"
      Viewport="10,10,40,40" ViewportUnits="Absolute"
      TileMode="Tile"
      ImageSource="sampleImages\cherries.jpg">
    </ImageBrush>

    <ImageBrush x:Key="FlamesBrush"
      Viewport="0,0,100,100" ViewportUnits="Absolute"
      TileMode="Tile"
      ImageSource="sampleImages\flames.jpg">
    </ImageBrush>
    
  </Application.Resources>

</Application>