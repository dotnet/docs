<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PrintDialog_Sample.Window1"
    Title="Simple Print Dialog Sample">
    <Border BorderBrush="Black" BorderThickness="2" Background="White">
	<StackPanel Margin="10" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
    
    <!-- <Snippet2> -->
    <Button Width="200" Click="InvokePrint">Invoke PrintDialog</Button>
    <!-- </Snippet2> -->
    <!-- <Snippet3> -->
    <Button Width="200" Click="GetWidth">Get the Printable Width</Button>
    <!-- </Snippet3> -->
    <!-- <Snippet4> -->
    <Button Width="200" Click="GetHeight">Get the Printable Height</Button>
    <!-- </Snippet4> -->
    <TextBlock Name="txt1"/>
    <TextBlock Name="txt2"/>
	</StackPanel>
	</Border>	
</Window>
