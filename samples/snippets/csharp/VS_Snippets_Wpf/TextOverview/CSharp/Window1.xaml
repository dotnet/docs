<Window x:Class="Windows.Samples.WinFX.Window1"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Text Overview Samples"
  Background="LightSteelBlue"
  >

  <StackPanel>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="240"/>
        <ColumnDefinition Width="180"/>
      </Grid.ColumnDefinitions>
      <Button Margin="10" Grid.Column="0" Grid.Row="0" FontSize="16" Click="OnDisplayTextClick">Enumerate Fonts</Button>
      <ComboBox Margin="10" Name="comboBoxFonts" Grid.Column="1" Grid.Row="0"  FontSize="14" />
    </Grid>

		<Canvas
      Margin="20" 
			Background="SteelBlue"
			Height="150">
		</Canvas>
  </StackPanel>
</Window>
