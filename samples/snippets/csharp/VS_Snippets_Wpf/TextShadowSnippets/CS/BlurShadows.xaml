<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >

  <StackPanel>
    
    <StackPanel>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

      <!-- <SnippetTextShadowSnippet6> -->
      <!-- Shadow effect by creating a blur. -->
      <TextBlock
        Text="Shadow Text"
        Foreground="Green"
        Grid.Column="0" Grid.Row="0" >
        <TextBlock.Effect>
          <BlurEffect
            Radius="8.0"
            KernelType="Box"/>
        </TextBlock.Effect>
      </TextBlock>
      <TextBlock
        Text="Shadow Text"
        Foreground="Maroon"
        Grid.Column="0" Grid.Row="0" />
      <!-- </SnippetTextShadowSnippet6> -->
      </Grid>

    </StackPanel>

  </StackPanel>
  
</Page>
