<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  >

  <StackPanel>
    <StackPanel>
    
      <!-- <SnippetTextShadowSnippet1> -->
      <!-- Soft single shadow. -->
      <TextBlock
        Text="Shadow Text"
        Foreground="Teal">
        <TextBlock.Effect>
          <DropShadowEffect
            ShadowDepth="4"
            Direction="330"
            Color="Black"
            Opacity="0.5"
           BlurRadius="4"/>
        </TextBlock.Effect>
      </TextBlock>
      <!-- </SnippetTextShadowSnippet1> -->

      <!-- <SnippetTextShadowSnippet2> -->
      <!-- Hard single shadow. -->
      <TextBlock
        Text="Shadow Text"
        Foreground="Maroon">
        <TextBlock.Effect>
          <DropShadowEffect
            ShadowDepth="6"
            Direction="135"
            Color="Maroon"
            Opacity="0.35"
            BlurRadius="0.0" />
        </TextBlock.Effect>
      </TextBlock>
      <!-- </SnippetTextShadowSnippet2> -->
    </StackPanel>

  </StackPanel>
</Page>
