<Application x:Class="SDKSample.MyApp"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  StartupUri="PageOne.xaml"
  >

  <Application.Resources>

    <!-- Brush Resource -->
    <LinearGradientBrush x:Key="linearGradientBackground"
          StartPoint="0,0.5"  EndPoint="1,0.5">
      <LinearGradientBrush.GradientStops>
        <GradientStop Color="SteelBlue" Offset="0.00" />
        <GradientStop Color="White" Offset="0.50" />
        <GradientStop Color="Teal" Offset="1.00" />
      </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>

  </Application.Resources>
</Application>