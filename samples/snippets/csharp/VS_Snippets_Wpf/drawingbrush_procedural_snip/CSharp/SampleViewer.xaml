<Window x:Class="Microsoft.Samples.DrawingBrushExamples.SampleViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Microsoft.Samples.DrawingBrushExamples"
    xmlns:examples="clr-namespace:Microsoft.Samples.DrawingBrushExamples"
    >
  <DockPanel>
    <TabControl>
      
      <TabItem Header="Simple example">
        <Frame>
          <Frame.Content>
            <examples:DrawingBrushExample />
          </Frame.Content>
        </Frame>
      </TabItem>
  
        <TabItem Header="Tiled DrawingBrush example">
          <Frame>
            <Frame.Content>
              <examples:TiledDrawingBrushExample />
            </Frame.Content>
          </Frame>
      </TabItem>
  
    </TabControl>    
  </DockPanel>
  
</Window>
