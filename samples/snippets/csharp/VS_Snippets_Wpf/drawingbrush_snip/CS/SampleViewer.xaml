<Window x:Class="Microsoft.Samples.DrawingBrushExamples.SampleViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Microsoft.Samples.DrawingBrushExamples"
    >
  <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <TabItem Header="Viewbox Clipping Illustration">
        <Frame Source="ViewboxClippingIllustration.xaml" />
      </TabItem> 


      <TabItem Header="Viewbox Illustration">
        <Frame Source="ViewboxIllustration.xaml" />
      </TabItem>
      
      <TabItem Header="Simple example">
        <Frame Source="DrawingBrushExample.xaml" />
      </TabItem>
  
        <TabItem Header="Tiled DrawingBrush example">
          <Frame Source="TiledDrawingBrushExample.xaml" />
      </TabItem>
          <TabItem Header="Alignment example">
            <Frame Source="AlignmentIllustration.xaml" />
      </TabItem>
     
          <TabItem Header="Projection illustration" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Frame Source="ProjectionIllustration.xaml" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Background="White"/>
      </TabItem>      
    </TabControl>    
  </DockPanel>
  
</Window>
