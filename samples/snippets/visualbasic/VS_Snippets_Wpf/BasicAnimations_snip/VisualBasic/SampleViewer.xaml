<!-- Displays the different animation examples. -->
<Window  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="SDKSamples.SampleViewer"
    xmlns:example="clr-namespace:SDKSamples">

    
    <DockPanel>
    <TabControl Background="White">
      <TabItem Header="ThicknessAnimation Example">
        <Frame>
          <Frame.Content>
            <example:ThicknessAnimationExample />
          </Frame.Content>
        </Frame>
      </TabItem>
      <TabItem Header="SizeAnimation Example">
        <Frame>
          <Frame.Content>
            <example:SizeAnimationExample />
          </Frame.Content>
        </Frame>
      </TabItem>
      <TabItem Header="RectAnimation Example">
        <Frame>
          <Frame.Content>
            <example:RectAnimationExample />
          </Frame.Content>
        </Frame>
      </TabItem>
      <TabItem Header="PointAnimation Example">
        <Frame>
          <Frame.Content>
            <example:PointAnimationExample />
          </Frame.Content>
        </Frame>
      </TabItem>     
      
    </TabControl>
   
    </DockPanel>
</Window>
