<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="SDKSample.FontPackageSnippets"
  Background="White" 
  Loaded="FontPackageSnippetsLoaded"
  >

  <StackPanel Margin="10">
    <TextBlock FontSize="12" Text="FontPackageSnippets.xaml" />

    <TextBlock FontFamily="./resources/#Pericles Light">
      Aegean Sea
    </TextBlock>

    <TextBlock Name="myTextBlock">
      Aegean Sea
    </TextBlock>

    <TextBlock FontFamily="file:///d:/MyFonts/#Pericles Light">
      Aegean Sea
    </TextBlock>

    <TextBlock FontFamily="./#Pericles Light">
      Aegean Sea
    </TextBlock>
    
  </StackPanel>
  
</Page>
