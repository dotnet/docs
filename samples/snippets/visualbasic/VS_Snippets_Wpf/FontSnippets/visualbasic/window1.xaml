<Window x:Class="SDKSample.Window1"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Font Snippets"
  Background="LightSteelBlue"
  >

  <StackPanel>
    <Canvas Margin="20, 40, 20, 20" Background="Beige" Height="100">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="100" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
          <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="640" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0" Name="TextBlock1" Margin="20, 20, 10, 10" Width="640" Height="80" FontSize="48" Foreground="Maroon"
          FontFamily="Comic Sans MS">
          Miramonte
        </TextBlock>
        <Button Margin="5, 5, 5, 5" Height="25" Width="160" Grid.Column="0" Grid.Row="1" Click="OnClick1">Set Pericles Light</Button>
        <ComboBox Height="30" Width="300" Name="comboBoxTypeface" Grid.Column="0" Grid.Row="2" FontSize="14" />
        <ComboBox Height="30" Width="300" Name="comboBoxFonts" Grid.Column="0" Grid.Row="3" FontSize="14" />
        <ComboBox Height="30" Width="300" Name="comboBoxStyles" Grid.Column="0" Grid.Row="4" FontSize="14" />
      </Grid>
    </Canvas>
    <StackPanel Margin="100">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="100" />
          <ColumnDefinition Width="100" />
          <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
      </Grid>

      <TextBlock Grid.Column="0" Grid.Row="0" FontStyle="Normal">Normal font style</TextBlock>
      <TextBlock Grid.Column="0" Grid.Row="1" FontStyle="Italic">Italic font style</TextBlock>
      <TextBlock Grid.Column="0" Grid.Row="2" FontStyle="Oblique">Oblique font style</TextBlock>

      <TextBlock FontWeight="UltraBold" FontFamily="Gil Sans MT">Hello, world</TextBlock>

    </StackPanel>

  </StackPanel>
</Window>
