
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Microsoft.Samples.Graphics.UsingImageBrush.MyWindow"
    Title="ImageBrush Sample"
    xmlns:examples="clr-namespace:Microsoft.Samples.Graphics.UsingImageBrush">

  <DockPanel Background="White">
    <TabControl Background="White" BorderBrush="Orange">

      <TabItem Header="Painting with Images" >
        <Frame>
          <Frame.Content>
            <examples:PaintingWithImagesExample />
          </Frame.Content>
        </Frame>
      </TabItem> 
      <TabItem Header="Tiled ImageBrush Example" >
        <Frame>
          <Frame.Content>
            <examples:TiledImageBrushExample />
          </Frame.Content>
        </Frame>
      </TabItem>      
      <TabItem Header="Stretch Modes" >
        <Frame>
          <Frame.Content>
            <examples:StretchModes />
          </Frame.Content>
        </Frame>
      </TabItem>

      <TabItem Header="Tile Size Example" >
        <Frame>
          <Frame.Content>
            <examples:TileSizeExample />
          </Frame.Content>
        </Frame>
      </TabItem>
    </TabControl> 
  </DockPanel>
</Window>
