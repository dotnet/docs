<Page  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  x:Class="SDKSample.SampleViewer"
  xmlns:Examples="clr-namespace:SDKSample" >
  <DockPanel Background="White">
    <TabControl Name="sampleSelector">
      <TabItem Header="Rectangle Opacity Fade Example">
        <Frame Name="MyRectangleOpacityFadeExampleFrame" Background="White" />
      </TabItem>
      <TabItem Header="Controllable Storyboard Example">
        <Frame Name="MyControllableStoryboardExampleFrame" Background="White" />
      </TabItem>
          <TabItem Header="FillBehavior Example">
            <Frame Background="White">
              <Frame.Content>
                <Examples:FillBehaviorExample />
              </Frame.Content>
            </Frame>
      </TabItem>
    </TabControl>
  </DockPanel>
</Page>
