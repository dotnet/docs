<Page 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="PaintWithVideoExample">
  <StackPanel>
  
    <!-- <SnippetGraphicsMMVideoAsTextBackgroundInline> -->
    <TextBlock FontSize="100pt" Text="Some Text" FontWeight="Bold">
      <TextBlock.Foreground>
        <VisualBrush>
          <VisualBrush.Visual>
            <MediaElement Source="sampleMedia\xbox.wmv" IsMuted="True" />
          </VisualBrush.Visual>
        </VisualBrush>
      </TextBlock.Foreground>
    </TextBlock>
    <!-- </SnippetGraphicsMMVideoAsTextBackgroundInline> -->

    <!-- <SnippetGraphicsMMVideoAsTextBackgroundTiledInline> -->
    <TextBlock FontSize="100pt" Text="Some Text" FontWeight="Bold">
      <TextBlock.Foreground>
        <VisualBrush Viewport="0,0,0.5,0.5" TileMode="Tile">
          <VisualBrush.Visual>
            
            <MediaElement Source="sampleMedia\xbox.wmv" IsMuted="True" /> 
          </VisualBrush.Visual>
        </VisualBrush>
      </TextBlock.Foreground>
    </TextBlock>
    <!-- </SnippetGraphicsMMVideoAsTextBackgroundTiledInline> -->
    
  </StackPanel>
</Page>
